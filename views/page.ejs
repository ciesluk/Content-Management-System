<%-include('layouts/header'); -%>
<body>
    <!--Header-->
    <header>
        <img src="images/school.png" alt="Blog Logo" height="130">
        <h1>Tom's School Blog</h1>
        <h2>Lets write some fun posts!</h2>
    </header>
    <!--Navigation Menu - displays the Home page, Login Page and Any New Pages-->
    <nav id="nav_menu">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/login">Login</a></li>
            <%
                for(var page of pages){
                    %>
                        <li><a href="<%= page._id %>"><%= page.pageTitle %></a></li>
                    <%
                }
            %>
        </ul>
    </nav>
    <!--Main Section-->
    <main>
        <img src="uploads/<%= heroImageName %>" alt="Hero Image"> 
        <h2><%= pageTitle %></h2>
        <p><%- pageDescription %></p>
    </main>
    <!--Footer-->
<%- include('layouts/footer'); -%>